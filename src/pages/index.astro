---
import HeroImage from '@assets/hero.png';
import Trips from '@components/Advantages.astro';
import Donate from '@components/Donate.astro';
import Modal from '@components/Modal.astro';
import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import { WEBSITE_URL, WEBSITE_URL_2 } from 'src/consts';
---

<Layout>
  <section class="hero -mx-2rem sm:mx-0" id="hero">
    <div style={`background-image: url(${HeroImage.src});`} class="min-h-470px bg-cover sm:bg-contain bg-no-repeat flex flex-col rounded-b-20px">
      <div class="flex justify-between items-center gap-3 py-50px px-7">
        <h2 class="text-4xl text-white">
          Byelorussian <br /> Mission
        </h2>
        <Image src={import('../assets/logo.svg')} alt="logo" />
      </div>
      <Modal />
    </div>
  </section>

  <Donate />

  <Trips />

  <section class="mission max-w-360px mx-auto mb-6">
    <a href={WEBSITE_URL} target="_blank" class="relative wrapper rounded-20px overflow-hidden block group">
      <Image class="group-hover:scale-105 transition-transform" src={import('../assets/big-mission.png')} alt="big mission, big task, even larger god" />
      <span class="absolute bottom-5 left-5 text-sm text-white z-2">Website</span>
    </a>
  </section>

  <section class="max-w-360px mx-auto">
    <a href={WEBSITE_URL_2} class="relative wrapper rounded-20px overflow-hidden block group">
      <Image class="group-hover:scale-105 transition-transform" src={import('../assets/steroids.png')} alt="like websites on steroids" />
      <span class="absolute bottom-5 left-5 text-sm text-white z-2">Looking for a great website?</span>
    </a>
  </section>
</Layout>

<style>
  .wrapper {
    box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.25);
  }
  .wrapper:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(33, 41, 36, 0.1) 65%, #18201b 100%);
    z-index: 1;
  }
</style>
